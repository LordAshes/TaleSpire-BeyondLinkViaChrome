{
  "manifest_version": 2,
  "name": "D&D Beyond Link",
  "version": "1.2",

  "content_scripts":
  [
    {
      "matches": ["https://www.dndbeyond.com/profile/*/characters/*"],
      "js": ["injection.js"]
    }
  ],
  "page_action":
  {
    "default_icon":
	{
      "16": "icon.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons":
  {
    "16": "icon.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}